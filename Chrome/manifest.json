{
  "name": "Power Automate Quick-Tester",
  "description": "Automatiseert Test, Run flow en Done klikken in Power Automate",
  "version": "1.0.1",
  "manifest_version": 3,
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["https://make.powerautomate.com/*"],
  "background": {
    "service_worker": "service_worker.js"
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}