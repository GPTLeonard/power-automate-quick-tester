{
  "manifest_version": 2,
  "name": "Power Automate Quick-Tester",
  "version": "1.0.0",
  "description": "Firefox add-on for one-click Power Automate flow testing automation",
  
  "permissions": [
    "activeTab",
    "storage"
  ],
  
  "content_scripts": [
    {
      "matches": ["*://flow.microsoft.com/*", "*://make.powerautomate.com/*"],
      "js": ["firefox-content.js"],
      "run_at": "document_end"
    }
  ],
  
  "browser_action": {
    "default_title": "Power Automate Quick-Tester - Klik om te starten",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  
  "applications": {
    "gecko": {
      "id": "power-automate-quick-tester@example.com",
      "strict_min_version": "57.0"
    }
  }
}